{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bruli/raspberryWaterSystem/internaL/infra/http/schemas/update_zone_request.json",
  "type": "object",
  "title": "Update a zone",
  "description": "This schema defines the request to update a zone",
  "examples": [
    {
      "name": "zone name",
      "relays": [
        1,
        2
      ]
    }
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "relays": {
      "type": "array",
      "items": {
        "type": "integer"
      }
    }
  },
  "required": [
    "name",
    "relays"
  ]
}
