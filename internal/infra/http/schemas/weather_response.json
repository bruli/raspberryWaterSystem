{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bruli/raspberryWaterSystem/internaL/infra/http/schemas/weather_response.json",
  "type": "object",
  "title": "Weather response",
  "description": "This schema defines the weather response",
  "examples": [
    {
      "temperature": 25.7,
      "humidity": 43.9,
      "is_raining": false
    }
  ],
  "properties": {
    "temperature": {
      "type": "number"
    },
    "humidity": {
      "type": "number"
    },
    "is_raining": {
      "type": "boolean"
    }
  },
  "required": [
    "temperature",
    "humidity",
    "is_raining"
  ]
}