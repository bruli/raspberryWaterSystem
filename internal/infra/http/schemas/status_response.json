{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bruli/raspberryWaterSystem/internaL/infra/http/schemas/status_response.json",
  "type": "object",
  "title": "Status response",
  "description": "This schema defines the status response",
  "examples": [
    {
      "system_started_at": "1659280320",
      "updated_at": "1659280350",
      "temperature": 20.5,
      "humidity": 50.0,
      "is_raining": false,
      "active": true
    }
  ],
  "properties": {
    "system_started_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    },
    "temperature": {
      "type": "number"
    },
    "humidity": {
      "type": "number"
    },
    "is_raining": {
      "type": "boolean"
    },
    "active": {
      "type": "boolean"
    }
  },
  "required": [
    "system_started_at",
    "temperature",
    "humidity",
    "is_raining",
    "active"
  ]
