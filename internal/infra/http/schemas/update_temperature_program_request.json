{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/bruli/raspberryWaterSystem/internaL/infra/http/schemas/update_temperature_program_request.json",
  "type": "array",
  "title": "Update temperature program request",
  "description": "This schema defines update an existing temperature program request",
  "examples": [
    [
      {
        "hour": "20:00",
        "executions": [
          {
            "seconds": 20,
            "zones": [
              "zone a",
              "zone b"
            ]
          }
        ]
      }
    ]
  ],
  "items": {
    "$ref": "#/definitions/updateProgramTemperatureRequest"
  },
  "definitions": {
    "updateProgramTemperatureRequest": {
      "type": "object",
      "properties": {
        "hour": {
          "type": "string"
        },
        "executions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/updateExecutionTemperatureRequest"
          }
        }
      },
      "required": [
        "executions",
        "hour"
      ]
    },
    "updateExecutionTemperatureRequest": {
      "type": "object",
      "properties": {
        "seconds": {
          "type": "integer"
        },
        "zones": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "seconds",
        "zones"
      ]
    }
  }
}